<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style_prod.css">
    <title>Document</title>
</head>

<body>
    <h1>Listado de Productos</h1>
    <div class="main">
        <div>
            <table class="tdprod">
                <th>Productos</th>
                <th>Precio</th>
                <th>Cantidad</th>
                <tbody id="tabla"></tbody>
            </table>
        </div>

    </div>
    <div class="contbutton">
        <a href="/regresarHome">Home</a>
    </div>
</body>
<script>
    let productos = ["papa", "yuca", "zanahoria"];
    let vlr = ["4000", "2000", "2500"];
    let cantidad = ["23", "12", "45"];


    function listarProductos() {
        var datos = "";
        for (var i = 0; i < productos.length; i++) {

            datos += "<tr><td>" + productos[i] + "</td><td>" + vlr[i] + "</td><td>" + cantidad[i] + "</td><tr>";
        };
        document.getElementById('tabla').innerHTML = datos;
    };
    listarProductos();
</script>

</html>